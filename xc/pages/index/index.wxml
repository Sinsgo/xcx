<!--index.wxml-->
<view class="container index">
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{swiperData}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item.img}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>
<view class='main-content'>
<view class='content-item' wx:for="{{mainContent}}" wx:key="{{index}}">
<view class='title'>
{{item.title}}
</view>
<view class='content' wx:for="{{item.books}}">
<view class='box-l'>
<image src='{{item.img}}'></image>
</view>
<view class='box-r'>
<view class='book-title'>{{item.title}}</view>
<view class='book-desc'>{{item.desc}}</view>
<view class='aurhot'>
<text aurhot-l>{{item.aurhot}}</text>
<view class='autos-r'>
<text class='update-time'>两天前</text>
<text class='category'>后端开发</text>
<text class='many'>{{item.looknums}}</text>
</view>
</view>
</view>
</view>
</view>
</view>
</view>
