 .index .slide-image{
  width: 710rpx;
  height: 350rpx;
}
.content-item{
  margin-top: 40rpx; 
}
.content-item .title{
  padding-left: 20rpx;
  font-size: 16px;
  border-left: 2px solid #000;
  line-height: 24rpx;
  height: 24rpx;
}
.content-item .content{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
}
.content .box-l image{
width: 230rpx;
height: 310rpx;
}
.box-r .book-title{
font-size: 14px;
color: #222;
}
.box-r{
  padding-bottom: 10rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.box-r .book-desc{
  color: #333;
  font-size: 14px;
  line-height:2;
 display: -webkit-box;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:3;
 overflow: hidden;
 
}
.box-r .author{
  font-size: 12px;
  display: flex;
  justify-content: space-between;
}
.update-time{
 padding-right: 10rpx;
}
.category{
  padding-right: 10rpx;
}
.loading-more{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
}
.loading-more .loading-img{
 width: 50rpx;
 height: 50rpx;
}
.no-more{
  position:relative;
  display:flex;
  align-items: center;
  justify-content:centet;
  height: 160rpx;
  background: #f1f1f1;
  z-index: 998;
  text-align: center;
  margin: 0 auto;
  color: #888;
}
.no-more-text{
  position: absolute;
  left: 50%;
}
.line{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-59%,-50%);
  width: 600rpx;
  height: 1rpx;
  background: #e9e9e9;
  z-index: 0;
}