<!--pages/content/content.wxml-->
<view class='book'>
<image src='/static/img/cdr.svg' class='loading'wx:if="{{isLoading}}"></image>
<view class='main'>
<wemark md="{{title.data.article.content}}" link highlight type="wemark"></wemark>
</view>

<view class='mask' wx:if="{{isShow}}" bindtap='toggleCatalog' ></view>

<scroll-view scroll-y class='catalog-menu' wx:if="{{isShow}}">
<view class="catalog-item" wx:for="{{Catalog}}"wx:key="{{index}}" data-id="{{item._id}}"
bindtap="handleget"
> {{item.title}}</view>
</scroll-view>


<view class='menu'>
<view class='iconfont icon-pc-zuo'></view>
<view class='iconfont icon-zitidaxiao1'></view>
<view class='iconfont icon-dxx'></view>
<view class='iconfont icon-mulu' bindtap='toggleCatalog'></view>
<view class='iconfont icon-pc-you'></view>
</view>
</view>
