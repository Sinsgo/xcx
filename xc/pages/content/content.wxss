/* pages/content/content.wxss */
.book{
  width: 700rpx;
  padding-left: 20rpx;
  font-size: 14px;
}
@import '/static/iconfont/iconfont.wxss';
.book .menu{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 998;
  padding-bottom: 0;
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-top: 1px solid #f1f1f1;
  height: 100rpx;
  line-height: 100rpx;
}

.menu .iconfont{
flex: 1;
text-align: center;
font-size: 18px;
}
.catalog-menu{
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 996;
  padding-bottom: 100rpx;
  border:1px solid #f1f1f1;
  background: #fff;
  transform: translate3d(-100%,0,0);
  transition: transform .5 ease;
  width:550rpx;
}
.active{
  transform: translate3d(0,0,0)
}
.catalog-item{
  font-size: 14px;
  color: #333;
  line-height: 70rpx ;
  padding-left:20rpx;
  height: 70rpx;
  border-bottom: 1px solid #666;
}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 888;
  background: rgba(0, 0, 0, .2)
}
.catalog-item:active{
background: #EDECE8;
}
