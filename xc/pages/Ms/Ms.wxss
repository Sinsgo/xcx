/* Ms/Ms.wxss */
.dateils .book-dateils{
padding: 20rpx 20rpx 40rpx 20rpx;
border-bottom:8rpx solid #e9e9e9; 
}
.book-t{
  display: flex;
  font-size: 12px;
  color: #444;
  justify-content: space-between;
}
.book-t .title{
  color: #333;
 font-size: 14px;
 font-weight: 700;
}
.book-t .img{
  width: 300rpx;
  height: 320rpx;
}
.book-t .main-msg{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.book-b{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.book-b .btn{
  color: #000;
 margin: 0;
 width: 300rpx;
 font-size: 12px;
 background: #e9e9e9;
 border: 1px solid #e9e9e9;
}
/* 简介部分 */
.book-desc{
 padding: 30rpx 20rpx;
 font-size: 12px;
 line-height:1.5;  
  border: 2px solid #e9e9e9;
}
.book-desc .title{
  font-size: 15px;
  font-weight: 700;
 
}
.desc-main{
  margin-top: 40rpx;
  font-size: 12px;
  color: #333;
}
/* 查看目录 */
.book-catalog{
  padding: 20rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
   border: 2px solid #e9e9e9;
}
.show-catalog{
  font-size: 15px;
 width: 300rpx;
  display: flex;
  justify-content: space-between;
}
.catalogs{
  font-size: 15px;
  font-weight: 700;
  color: #333;
}
.update-time{
  font-size: 14px;
  color: #444;
}
.read-btn-wrap{
  width: 600rpx;
  display: block;
  margin:150rpx  auto;
}
.read-btn-wrap .btn{
  background: #F33706;
  color: #fff;
 font-weight: 600；
}